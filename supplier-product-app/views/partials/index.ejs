<% layout('layouts/main') %>
<h1>Home Page</h1>

<!-- Menu for suppliers -->
<select onchange="location = this.value;">
  <option value="/">All Suppliers</option>
  <% suppliers.forEach(supplier => { %>
    <option value="/?supplier=<%= supplier.name %>"><%= supplier.name %></option>
  <% }) %>
</select>

<!-- Search bar -->
<form action="/" method="GET">
  <input type="text" name="search" placeholder="Search products by name">
  <button type="submit">Search</button>
</form>

<h2>Products</h2>
<ul>
  <% products.forEach(product => { %>
    <li>
      <%= product.name %> - Price: <%= product.price %> - Quantity: <%= product.quantity %> - Supplier: <%= product.supplier.name %>
    </li>
  <% }) %>
</ul>